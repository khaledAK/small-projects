<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.khaleda.jobtask.activity.SignupActivity"
    android:background="@color/background"
    android:padding="@dimen/activity_horizontal_margin">
    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:id="@+id/dummy"
        android:focusableInTouchMode="true">
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/layout_bg"
        android:id="@+id/root_view">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:padding="@dimen/activity_horizontal_margin"
            android:orientation="vertical"
            android:id="@+id/email_password_layout">
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg_white"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"
                android:hint="@string/email"
                android:padding="@dimen/activit_horizontal_padding"
                android:gravity="center"
                android:textSize="@dimen/activity_text_font"
                android:textColor="@color/primaryText"
                android:id="@+id/email"
                android:inputType="text"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg_white"
                android:hint="@string/password"
                android:padding="@dimen/activit_horizontal_padding"
                android:gravity="center"
                android:textSize="@dimen/activity_text_font"
                android:textColor="@color/primaryText"
                android:id="@+id/password"
                android:inputType="textPassword"
                android:layout_marginBottom="@dimen/activity_horizontal_margin"/>
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/layout_bg_white"
                android:hint="@string/repeat_password"
                android:padding="@dimen/activit_horizontal_padding"
                android:gravity="center"
                android:textSize="@dimen/activity_text_font"
                android:textColor="@color/primaryText"
                android:id="@+id/repeated_password"
                android:inputType="textPassword"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/email_password_layout"
            android:layout_centerHorizontal="true"
            android:orientation="horizontal"
            android:padding="@dimen/activity_horizontal_margin">
            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/signup"
                android:background="@drawable/layout_bg_button"
                android:text="@string/signup"
                android:textStyle="bold"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
